<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.after.CategoriesFragment">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:fontFamily="@font/sf_pro_text"
        android:text="Categories"
        android:textColor="@color/title_text_color"
        android:textSize="@dimen/_18ssp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="@color/white"
        android:id="@+id/back_card"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_marginStart="@dimen/_16sdp"
        android:foreground="?selectableItemBackground"
        app:cardCornerRadius="@dimen/_15sdp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="@id/title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/title">

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_left" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/choose_linear"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_400sdp"
        android:layout_marginTop="@dimen/_17sdp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/title">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/category1"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_15sdp"
                android:foreground="?selectableItemBackground"
                app:cardBackgroundColor="@color/news_card_background_color"
                app:cardCornerRadius="@dimen/_8sdp">

                <TextView
                    android:id="@+id/sport_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/sf_pro_text"
                    android:gravity="center"
                    android:text="🏈   Sports"
                    android:textColor="@color/card_text_color"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/category2"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_15sdp"
                android:foreground="?selectableItemBackground"
                app:cardBackgroundColor="@color/news_card_background_color"
                app:cardCornerRadius="@dimen/_8sdp">

                <TextView
                    android:id="@+id/life_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/sf_pro_text"
                    android:gravity="center"
                    android:text="🌞   Life"
                    android:textColor="@color/card_text_color"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/category3"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_15sdp"
                android:foreground="?selectableItemBackground"
                app:cardBackgroundColor="@color/news_card_background_color"
                app:cardCornerRadius="@dimen/_8sdp">

                <TextView
                    android:id="@+id/animals_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/sf_pro_text"
                    android:gravity="center"
                    android:text="🐻   Animals"
                    android:textColor="@color/card_text_color"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/category4"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_15sdp"
                android:foreground="?selectableItemBackground"
                app:cardBackgroundColor="@color/news_card_background_color"
                app:cardCornerRadius="@dimen/_8sdp">

                <TextView
                    android:id="@+id/food_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/sf_pro_text"
                    android:gravity="center"
                    android:text="🍔   Food"
                    android:textColor="@color/card_text_color"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/category5"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_15sdp"
                android:foreground="?selectableItemBackground"
                app:cardBackgroundColor="@color/news_card_background_color"
                app:cardCornerRadius="@dimen/_8sdp">

                <TextView
                    android:id="@+id/history_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/sf_pro_text"
                    android:gravity="center"
                    android:text="📜   History"
                    android:textColor="@color/card_text_color"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/category6"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_15sdp"
                android:foreground="?selectableItemBackground"
                app:cardBackgroundColor="@color/news_card_background_color"
                app:cardCornerRadius="@dimen/_8sdp">

                <TextView
                    android:id="@+id/politic_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/sf_pro_text"
                    android:gravity="center"
                    android:text="⚖️   Politics"
                    android:textColor="@color/card_text_color"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/category7"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_15sdp"
                android:foreground="?selectableItemBackground"
                app:cardBackgroundColor="@color/news_card_background_color"
                app:cardCornerRadius="@dimen/_8sdp">

                <TextView
                    android:id="@+id/gaming_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/sf_pro_text"
                    android:gravity="center"
                    android:text="🎮   Gaming"
                    android:textColor="@color/card_text_color"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/category8"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_15sdp"
                android:foreground="?selectableItemBackground"
                app:cardBackgroundColor="@color/news_card_background_color"
                app:cardCornerRadius="@dimen/_8sdp">

                <TextView
                    android:id="@+id/nature_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/sf_pro_text"
                    android:gravity="center"
                    android:text="🌴   Nature"
                    android:textColor="@color/card_text_color"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/category9"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_15sdp"
                android:foreground="?selectableItemBackground"
                app:cardBackgroundColor="@color/news_card_background_color"
                app:cardCornerRadius="@dimen/_8sdp">

                <TextView
                    android:id="@+id/art_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/sf_pro_text"
                    android:gravity="center"
                    android:text="🎨   Art"
                    android:textColor="@color/card_text_color"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/category10"
                android:layout_width="@dimen/_130sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_15sdp"
                android:foreground="?selectableItemBackground"
                app:cardBackgroundColor="@color/news_card_background_color"
                app:cardCornerRadius="@dimen/_8sdp">

                <TextView
                    android:id="@+id/fashion_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/sf_pro_text"
                    android:gravity="center"
                    android:text="👗   Fashion"
                    android:textColor="@color/card_text_color"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/button_change"
        android:layout_width="@dimen/_280sdp"
        android:layout_height="@dimen/_45sdp"
        android:elevation="0dp"
        android:foreground="?selectableItemBackground"
        app:cardBackgroundColor="@color/nuntium_color"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="0dp"
        app:cardMaxElevation="0dp"
        android:layout_marginTop="@dimen/_8sdp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/choose_linear">

        <TextView
            android:id="@+id/change_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/sf_pro_text"
            android:gravity="center"
            android:text="Change"
            android:textColor="@color/card_background_color"
            android:textSize="@dimen/_13sdp"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>